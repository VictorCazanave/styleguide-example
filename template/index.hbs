<!DOCTYPE html>
<html class="no-js" lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="description" content="An example of style guide" />
  <meta name="generator" content="kss-node" />
  <meta name="viewport" content="width=device-width" />

  <link rel="stylesheet" href="styleguide.css" />
  {{{styles}}}

  <title>Style Guide</title>
</head>

<body id="kss-body">

  <header class="sidebar">

    <h1 class="sidebar__title">
      Style Guide
    </h1>

    <nav>
      <ul class="menu">
        <li>
          <a class="menu__item" href="./index.html">
            Home
          </a>
        </li>
        {{#each menu}}
        <li>
          <a class="menu__item" href="section-{{ referenceURI }}.html#kssref-{{referenceURI}}">
            {{ header }}
          </a>
          {{#if children}}
          <ul class="menu__children">
            {{#each children}}
            <li class="menu__children__item {{#if isGrandChild}}menu__children__item--sub{{/if}}">
              <a href="section-{{../referenceURI}}.html#kssref-{{referenceURI}}">
                {{header}}
              </a>
            </li>
            {{/each}}
          </ul>
          {{/if}}
        </li>
        {{/each}}
      </ul>
    </nav>

  </header>

  <span class="main">
    <main class="main__content">
      {{#if template.isHomepage}}
      {{{homepage}}}
      {{else}}

      {{#each sections}}
      <h{{depth}} class="main__content__title main__content__title--level-{{depth}}" id="kssref-{{referenceURI}}">
        <a class="main__content__title__permalink" href="#kssref-{{referenceURI}}">
          {{header}}
        </a>
      </h{{depth}}>

      {{#if description}}
      <!-- Cannot use <p> because it messes up HTML -->
      <div class="description">
        {{{description}}}
      </div>
      {{/if}}

      {{#if colors }}
      <ul class="colors">
        {{#each colors}}
        <li class="colors__item">
          <figure class="color">
            <div class="color__figure" style="background-color:{{color}}"></div>
            <figcaption class="color__caption">
              <span class="color__caption__name">{{name}}</span>
              <code class="color__caption__code">{{color}}</code>
              <p>{{ description }}</p>
            </figcaption>
          </figure>
        </li>
        {{/each}}
      </ul>
      {{/if}}

      {{#if parameters}}
      <div class="parameters__title">
        Parameters:
      </div>
      <ul class="parameters__list">
        {{#each parameters}}
        <li class="parameters__list__item">
          <code class="parameters__list__item__name">{{name}}</code>
          <span class="parameters__list__item__description">
            {{{description}}}
          </span>
        </li>
        {{/each}}
      </ul>
      {{/if}}

      {{#if example}}
      <div class="example">
        <div class="example__title">
          Example
        </div>

        {{#if modifiers}}
        <div class="example__description">
          Default styling
        </div>
        {{/if}}

        <div class="example__visual">
          {{{example}}}
        </div>

        {{#each modifiers}}
        <div class="example__description">
          <code>{{name}}</code>
          {{{description}}}
        </div>

        <div class="example__visual">
          {{{markup}}}
        </div>
        {{/each}}

        {{#if markup}}
        <!-- Keep on same line -->
        <pre class="example__code"><code>{{{hljs markup 'handlebars'}}}</code></pre>
        {{/if}}
      </div>
      {{/if}}

      {{#if source.filename}}
      <div class="source">
        Source:
        <a href="https://github.com/VictorCazanave/styleguide-example/blob/master/{{source.filename}}#L{{source.line}}" target="_blank" rel="noopener noreferrer">
          <code>{{source.filename}}, line {{source.line}}</code>
        </a>
      </div>
      {{/if}}

      {{#if link}}
      <div class="link">
        Based on:
        <a href="{{link}}" target="_blank" rel="noopener noreferrer">
          <code>{{link}}</code>
        </a>
      </div>
      {{/if}}

      {{/each}}
      {{/if}}
    </main>
    </div>

    <script src="kss-assets/kss.js"></script>
    {{{scripts}}}

</body>

</html>
